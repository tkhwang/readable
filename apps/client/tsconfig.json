{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@client": ["apps/client"],
      "@client/*": ["apps/client/*"],
      "@readable/client-data-access": ["libs/client-data-access/src/index.ts"],
      "@readable/client-feature-home": ["libs/client-feature-home/src/index.ts"],
      "@readable/ui": ["libs/ui/src/index.ts"]
    }
  },

  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
